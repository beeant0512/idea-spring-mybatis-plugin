<idea-plugin>
    <id>org.xstudio.plugin.idea</id>
    <name>spring mybatis code generator</name>
    <vendor email="huangxb0512@gmail.com" url="https://beeant0512.github.io">Beeant</vendor>

    <description><![CDATA[
    a idea plugin for generate mybatis mapper(interface and mapper.xml files) and spring service, facade<br>
    <br>
    modified from <a href="https://github.com/leecho/mybatis-generator-plus">https://github.com/leecho/mybatis-generator-plus</a>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends optional="true" config-file="">com.intellij.database</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceInterface="org.xstudio.plugin.idea.setting.DefaultPersistentConfiguration"
                            serviceImplementation="org.xstudio.plugin.idea.setting.DefaultPersistentConfiguration" />
        <projectService
                serviceInterface="org.xstudio.plugin.idea.setting.ProjectPersistentConfiguration"
                serviceImplementation="org.xstudio.plugin.idea.setting.ProjectPersistentConfiguration"/>
        <applicationConfigurable groupId="tools" displayName="Mybatis Spring Generator Plus" id="Mybatis.Generator.Plus.Plugin"
                             instance="org.xstudio.plugin.idea.setting.DefaultSettingConfigurable"/>
        </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="mybatis-generator-action" class="org.xstudio.plugin.idea.action.MainAction" text="Mybatis Spring Code Generate">
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift meta G"/>
        </action>
    </actions>
</idea-plugin>